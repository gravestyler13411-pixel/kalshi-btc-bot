import time
from datetime import date
from config import TRADE_SIZE, DAILY_LOSS_LIMIT, BOT_ENABLED
from discord_alerts import alert

daily_pnl = 0.0
current_day = date.today()

alert("ðŸ¤– Kalshi BTC bot started")

while True:
    if not BOT_ENABLED:
        time.sleep(60)
        continue

    if date.today() != current_day:
        daily_pnl = 0.0
        current_day = date.today()
        alert("ðŸ”„ New trading day. P&L reset.")

    if daily_pnl <= -DAILY_LOSS_LIMIT:
        alert("ðŸ›‘ Daily $5 loss limit hit. Bot paused.")
        time.sleep(3600)
        continue

    # PLACEHOLDER TRADE LOGIC
    # (Real trading logic added AFTER you confirm itâ€™s running)
    time.sleep(300)
